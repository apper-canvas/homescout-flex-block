{
"/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage displays public property listings",
            "rule": "public"
          }
        ]
      }
    }
  },
"/search": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Property search is available to public users",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/favorites": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to view favorites",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/my-tours": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to view tours",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
"/property/:id": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Property details are publicly accessible",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/prompt-password/:appId/:emailAddress/:provider": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password prompt page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/reset-password/:appId/:fields": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password reset page is public",
            "rule": "public"
          }
        ]
      }
    }
  }
}